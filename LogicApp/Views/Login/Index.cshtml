@model LogicApp.Contravts.Users.LoginUserRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Войти";
    Layout = "_Layout";
}
<div class="text-center">
    <h4>Вход в аккаунт</h4>
    <form method="post">
        <div>
            <p>
                <label asp-for="UserName">Имя пользователя</label><br/>
                <input type="text" asp-for="UserName"/><br/>
                <span asp-validation-for="UserName"/>
            </p>
            <p>
                <label asp-for="Password">Пароль</label><br/>
                <input type="password" asp-for="Password"/><br/>
                <span asp-validation-for="Password"/>
            </p>
            <p>
                <input type="submit" value="Войти"/>
            </p>
        </div>
    </form>
    @Html.RouteLink("Регистрация",new { controller = "Register", action = ""})
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>